<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="css.css">
    <title>Admin Controll Panel</title>
</head>
{{>headerPartial}}

<section>

    <body>
        <div class="my-2">
            <a href="/add-Student-form" type="submit" class=" btn btn-success">Add Student</a>
        </div>
        <div id="panelMainBox" class=" container-fluid">
            <div class="container adminMainBox">
                <h1>Add a link notification</h1>
                <div class="card btn btn-success">
                    <form action="/post-Notification" method="post">
                        <div class="col">
                            <label for="inputEmail4" class="form-label btn btn-success">Enter title of the post</label>
                            <input type="text" class="form-control" id="inputEmail4" name="postTitle"
                                placeholder="Enter the title of the post" Required>
                        </div>
                        <div class="col my-2">
                            <label for="inputEmail4" class="form-label btn btn-success">Enter Post Link</label>
                            <input type="text" class="form-control" id="inputEmail4" name="postLink"
                                placeholder="Enter the link here" required>
                        </div>
                        <div class="col my-2">
                            <label for="inputState" class="form-label btn btn-success">Class:</label>
                            <select id="inputState" class="form-select" name="class" required>
                                <option selected>select</option>
                                <option value="Class-XII">Science Class XII</option>
                                <option value="Class-XI">Science Class XI</option>
                                <option value="Class-X">Class X</option>
                                <option value="Class-IX">Class IX</option>
                                <option value="Class-VIII">Class VIII</option>
                                <option value="Class-VII">Class VII</option>
                                <option value="Class-VI">Class VI</option>
                                <option value="Class-V">Class V</option>
                                <option value="Class-IV">Class IV</option>
                                <option value="Class-III">Class III</option>
                                <option value="Class-II">Class II</option>
                                <option value="Class-I">Class I</option>
                                <option value="">Not For Class</option>
                            </select>
                        </div>
                        <div>
                            <button type="submit" id="submit" class="btn btn-primary">post</button>
                        </div>
                    </form>
                </div>
            </div>


            <div class="container adminMainBox">
                <h1>Add a pdf Notification</h1>
                <div class="card btn btn-success">
                    <form action="/upload-pdfNotification" method="post" enctype="multipart/form-data">
                        <div class="col">
                            <label for="inputEmail4" class="form-label btn btn-success">Enter title of the post</label>
                            <input type="text" class="form-control" id="inputEmail4" name="post"
                                placeholder="Enter title of the post" Required>
                        </div>
                        <div class="col upload my-2">
                            <label class="input-group-text btn btn-success" for="inputGroupFile01">Upload pdf
                                notification
                                file:</label>
                            <input type="file" class="form-control" id="inputGroupFile01" name='pdfNotification'
                                required>
                        </div>
                        <div class="col my-2">
                            <label for="inputState" class="form-label btn btn-success">Class:</label>
                            <select id="inputState" class="form-select" name="class" required>
                                <option selected>select</option>
                                <option value="Class-XII">Science Class XII</option>
                                <option value="Class-XI">Science Class XI</option>
                                <option value="Class-X">Class X</option>
                                <option value="Class-IX">Class IX</option>
                                <option value="Class-VIII">Class VIII</option>
                                <option value="Class-VII">Class VII</option>
                                <option value="Class-VI">Class VI</option>
                                <option value="Class-V">Class V</option>
                                <option value="Class-IV">Class IV</option>
                                <option value="Class-III">Class III</option>
                                <option value="Class-II">Class II</option>
                                <option value="Class-I">Class I</option>
                                <option value="">Not For Class</option>
                            </select>
                        </div>
                        <div>
                            <button type="submit" id="submit" class="btn btn-primary my-2">Upload</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="container adminMainBox">
                <h1>Add a cover picture</h1>
                <div class="card btn btn-success">
                    <form action="/upload-coverPhoto" method="post" enctype="multipart/form-data">
                        <div class="col">
                            <label for="inputEmail4" class="form-label btn btn-success">Enter title of the post</label>
                            <input type="text" class="form-control" id="inputEmail4" name="postTitle"
                                placeholder="Enter the title of the post" Required>
                        </div>
                        <div class="col upload my-2">
                            <label class="input-group-text btn btn-success" for="inputGroupFile01">Upload Cover
                                Image:</label>
                            <input type="file" class="form-control" id="inputGroupFile01" name='coverImage' required>
                        </div>
                        <div>
                            <button type="submit" id="submit" class="btn btn-primary my-2">Upload</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="container adminMainBox">
                <h1>Add a Hadith to post</h1>
                <div class="card btn btn-success">
                    <form action="/post-hadith?_method=PUT" method="post">
                        <div class="col">
                            <label for="inputEmail4" class="form-label btn btn-success">Post a Hadith</label>
                            <input type="text" class="form-control" id="inputEmail4" name="hadith"
                                placeholder="Write a hadith here..." Required>
                        </div>

                        <div>
                            <button type="submit" id="submit" class="btn btn-primary">post</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</section>
<hr>
<section>
    <div class="container-fluid">
        {{#each coverPhotoArray}}
        {{>adminCoverPhotoPartial}}
        {{/each}}
        <hr>
        {{#each linkArray}}
        {{>adminNotificationPartial}}
        {{/each}}
        <hr>
        {{#each pdfNotificationArray}}
        {{>adminPdfPartial}}
        {{/each}}
    </div>
</section>
